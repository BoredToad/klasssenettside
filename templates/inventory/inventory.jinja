{% extends 'base.jinja' %}

{% block header %}
    <h1>{% block title %}Inventory{% endblock %}</h1>
{% endblock %}

{% block content %}
<form id="filters" method="post">
    <input name="search">
    <div id="availability_filter">
	<label>Availability</label>
	<br>
	<input type="checkbox" name="availability" value="available">
	<label for="available">Available</label>
	<br>
	<input type="checkbox" name="availability" value="not_available">
	<label for="not_available">Not available</label>
    </div>
    <div id="status_filter">
	<label>Status</label>
	<br>
	<input type="checkbox" name="status" value="works">
	<label for="works">Works</label>
	<br>
	<input type="checkbox" name="status" value="mostly_works">
	<label for="mostly_works">Mostly works</label>
	<br>
	<input type="checkbox" name="status" value="does_not_work">
	<label for="does_not_work">Does not work</label>
    </div>
    <div id="category_filter">
	<label>Category</label>
	<br>
	<input type="checkbox" name="category" value="pc">
	<label for="pcs">PC's</label>
	<br>
	<input type="checkbox" name="category" value="laptop">
	<label for="laptops">Laptops</label>
	<br>
	<input type="checkbox" name="category" value="monitor">
	<label for="monitors">Monitors</label>
	<br>
	<input type="checkbox" name="category" value="switch">
	<label for="switches">Switches</label>
	<br>
	<input type="checkbox" name="category" value="router">
	<label for="routers">Routers</label>
	<br>
	<input type="checkbox" name="category" value="firewall">
	<label for="firewalls">Firewalls</label>
	<br>
	<input type="checkbox" name="category" value="gaming_rig">
	<label for="gaming rigs">Gaming rigs</label>
	<br>
	<input type="checkbox" name="category" value="server">
	<label for="servers">Servers</label>
	<br>
	<input type="checkbox" name="category" value="tool">
	<label for="tools">Tools</label>
	<br>
	<input type="checkbox" name="category" value="misc">
	<label for="misc">Misc</label>
    </div>
    <input type="submit" value="filter">
</form>
<div id="inventory">
    <p>this will eventually be the inventory page</p>
    <table>
	<tr>
	    <th>Icon</th>
	    <th>Name</th>
	    <th>Category</th>
	    <th>Availablility</th>
	    <th>Status</th>
	    <th>Manufacturer</th>
	    <th>Model</th>
	</tr>
	{% for item in g.items %}
	<tr id="item_{{ item["id"] }}">
	    <td>N/A</td>
	    <td>{{ item["name"] }}</td>
	    <td>{{ item["category"] }}</td>
	    <td>{{ item["availability"] }}</td>
	    <td>{{ item["status"] }}</td>
	    <td>{{ item["manufacturer"] }}</td>
	    <td>{{ item["model"] }}</td>
	</tr>
	{% endfor %}
    </table>
</div>
{% endblock %}
